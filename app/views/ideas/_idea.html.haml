
%a.no-link-styling{:href => idea_path(idea)}
  .row
    .col-md-12
      .text-center
        = image_tag idea.author.photo_url, :class => "img-circle"
      -#%iframe{allowfullscreen: "", height: "220px;", width: "100%", src: "#{idea.video_url}"}
      %h4= idea.title

  .row
    .col-md-12
      %h4
        Followers
      %h4
        %i.fa.fa-thumbs-o-up
        = idea.followers_count
  .row
    .col-md-12
      = render :partial => "tags/tag_list", :locals => {taggable: idea}