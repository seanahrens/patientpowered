.row
  .col-md-12.text-center
    %i.fa.fa-lightbulb-o.text-h1
    %span.text-h2 Idea

.row
  .col-md-12
    %iframe{allowfullscreen: "", height: "220px;", width: "100%", src: "#{@idea.video_url}"}


    %h4= @idea.title

    %p
      Proposed by
      %strong= @idea.author.name

.row
  .col-md-12
    %p= @idea.description


.row
  .col-md-12
    %h4
      %i.fa.fa-thumbs-o-up
      = @idea.followers_count

      = @idea.followers_count_by_role(:patient)
      Patients
      = @idea.followers_count_by_role(:researcher)
      Researchers
      = @idea.followers_count_by_role(:stakeholder)
      Stakeholders


      - if current_user && current_user.following?(@idea)
        %a.btn.btn-default{:href => stop_following_idea_path(id: @idea.id)} Stop Following!
      - else
        %a.btn.btn-default{:href => follow_idea_path(id: @idea.id)} Follow!


%hr/

.row
  .col-md-12
    .list-group.list-group-default
      .list-group-item
        Comments
        %span.badge 6
.row
  .col-xs-4
    %a.btn.btn-primary.btn-block{:href => "http://www.facebook.com/sharer/sharer.php?u=#{idea_url(@idea)}"} Facebook
  .col-xs-4
    %a.btn.btn-info.btn-block{:href => "https://twitter.com/share?url=#{idea_url(@idea)}"} Twitter
  .col-xs-4
    %a.btn.btn-warning.btn-block{:href => "mailto:?subject=Cool%20Research%20Idea&body=Check%20this%20out:%20#{idea_url(@idea)}"} Email


.row
  .col-md-12
    %h3.text-center
      %i.fa.fa-graduation-cap.text-h2
      Studies Proposed




.row
  .col-md-12
    %h4 Edit Tools
    %p This is your idea.
    %a.btn.btn-default{:href => edit_idea_path(@idea)} Edit


